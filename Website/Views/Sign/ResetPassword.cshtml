@model ChickenHunt.Website.Controllers.Sign.Actions.ResetPassword.Model

@{
    ViewBag.Title = "Reset Password";
}

@if (Model.Hunter == null)
{
    <div class="alert alert-danger">Account not found.</div>
}
else
{
    <div class="row">
        <div class="col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
            <h2>Reset Password</h2>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()

                <div class="form-group">
                    <label for="exampleInputFile">Name</label>
                    <p class="help-block">@Model.Hunter.Name</p>
                </div>
                <div class="form-group">
                    <label for="exampleInputFile">Email</label>
                    <p class="help-block">@Model.Hunter.Email</p>
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    @Html.PasswordFor(m => m.Post.Password, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m=>m.Post.Password)
                </div>
                <div class="form-group">
                    <label>Retype New Password</label>
                    @Html.PasswordFor(m => m.Post.PasswordRetype, new {@class = "form-control"})
                    @Html.ValidationMessageFor(m => m.Post.PasswordRetype)
                </div>
                <button type="submit" class="btn btn-primary">Reset Password</button>
                @Html.ActionLink("Cancel", Model.GetRoute(), ChickenHunt.Website.Controllers.Home.Actions.Index.Route.Create(), new {@class = "btn btn-default"})
            }
        </div>
    </div>
}