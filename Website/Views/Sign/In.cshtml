@model ChickenHunt.Website.Controllers.Sign.Actions.In.Model

@{
    ViewBag.Title = "Sign In";
}

<div class="row">
    <div class="col-sm-offset-3 col-sm-6 col-md-offset-4 col-md-4">
        <h2>Sign In</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Email</label>
                @Html.TextBoxFor(m => m.Post.Email, new {@class = "form-control"})
            </div>
            <div class="form-group">
                <label>Password</label>
                @Html.PasswordFor(m => m.Post.Password, new {@class = "form-control"})
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
            @Html.ActionLink("Cancel", Model.GetRoute(), ChickenHunt.Website.Controllers.Home.Actions.Index.Route.Create(), new {@class = "btn btn-default"})
            @Html.ActionLink("Sign Up", Model.GetRoute(), ChickenHunt.Website.Controllers.Sign.Actions.Up.Route.Create(), new {@class = "btn btn-default pull-right"})
        }
        <div style="margin-top: 20px;">
            @Html.ActionLink("Forgot password", Model.GetRoute(), ChickenHunt.Website.Controllers.Sign.Actions.ForgotPassword.Route.Create())
        </div>
    </div>
</div>